<Page
    x:Class="GoyavPlace.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoyavPlace"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.BottomAppBar>
        <CommandBar>
            <CommandBar.Content>
                <Grid/>
            </CommandBar.Content>
            <AppBarButton x:Name="searchWithFind" Icon="Find" Label="appbarbutton" Click="searchPlaces" />
            <AppBarButton Icon="Add" Label="appbarbutton" Click="addPlace"/>
            <AppBarButton x:Name="settingsButton" Icon="Setting" Label="Settings" Click="editSettings"/>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="GoyavPlace" VerticalAlignment="Top" FontSize="24"/>
        <ProgressRing x:Name="progress" IsActive="False" Margin="10,5" VerticalAlignment="Top" />
        <ScrollViewer VerticalScrollMode="Auto">
            <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="PlaceForSearch" Margin="10,53,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PlaceholderText="search place" InputScope="Text" KeyUp="searchPlace" MinWidth="300" MinHeight="32" GotFocus="showCriteria" Visibility="Collapsed"/>
            </StackPanel>
            <StackPanel x:Name="searchPanel" Orientation="Vertical" Margin="0">
                <TextBlock x:Name="displayDistance" Text="Distance" Margin="10,60,10,5"/>
                <Slider x:Name="searchDistance" Minimum="10" LargeChange="50" Maximum="1000" StepFrequency="10" Value="10" MinWidth="20" Margin="10,5" AutomationProperties.Name="Distance" AutomationProperties.HelpText="Distance" ValueChanged="searchForDistance" />
                <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="10,0">
                    <CheckBox x:Name="searchStation" Content="Place" MinWidth="60" />
                    <CheckBox x:Name="searchLeisure" Content="Leisure" MinWidth="60" />
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="10,0">
                    <CheckBox x:Name="searchRestaurant" Content="Restaurant" MinWidth="60" />
                    <CheckBox x:Name="searchHotel" Content="Hotel" MinWidth="60" />
                </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="searchList" Orientation="Vertical" Padding="0,30,0,0" >
                <ListView x:Name="placeList" 
                      HorizontalAlignment="Left" 
                    Height="422" Margin="10,10,0,5" 
                    VerticalAlignment="Top" 
                    Width="300" 
                    IsItemClickEnabled="True" ItemClick="getPlace" Padding="0,5" ScrollViewer.VerticalScrollBarVisibility="Visible">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Height="80" Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border BorderBrush="Silver" CornerRadius="3" Height="75" Background="White" Margin="4,1">
                                   <Image x:Name="IMAGE" Source="{Binding Path=Picture.base64Decoded}" Margin="0,0,0,0" Stretch="Fill"/>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Top">
                                     <TextBlock Text="{Binding Path=name}" Margin="0,4,0,0" />
                                    <TextBlock Text="{Binding Path=Location.address}" />
                                      <TextBlock Text="{Binding Path=Location.country}" />
                                </StackPanel>
                                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                     <TextBlock Text="{Binding Path=distance}" />
                                </StackPanel>
                                </Grid>
                            </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
            <StackPanel x:Name="StatusPanel" Orientation="Vertical" Margin="0,0,0,0" >
               <Border x:Name="StatusBorder" Margin="0,0,0,0">
                   <ScrollViewer VerticalScrollMode="Auto"  VerticalScrollBarVisibility="Auto" MaxHeight="200">
                        <TextBlock x:Name="StatusBlock" FontWeight="Bold" 
                         MaxWidth="{Binding ElementName=Splitter, Path=ActualWidth}" Margin="10,10,10,20" TextWrapping="Wrap"  />
                   </ScrollViewer>
               </Border>
            </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
